{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Average Crop Yield Composition by State", "fontSize": 18 },
  "width": 720,
  "height": { "step": 28 },
  "background": "#ffffff",

  "config": {
    "view": { "stroke": null },
    "axis": { "grid": false, "domain": false, "ticks": false, "labelFontSize": 12 },
    "legend": { "titleFontSize": 12, "labelFontSize": 11 }
  },

  "data": { "url": "data/state_crop_average_yield.csv", "format": { "type": "csv" } },

  "params": [
    {
      "name": "ShowWhich",
      "value": "Highest",
      "bind": { "input": "select", "name": "Filter: ", "options": ["Highest","Lowest","Median","All"] }
    }
  ],

  "transform": [
    { "calculate": "replace(datum.crop_type, '_', ' ')", "as": "crop_clean" },
    { "calculate": "toNumber(datum.avg_yield)", "as": "yield_num" },
    { "filter": "isValid(datum.yield_num) && isFinite(datum.yield_num)" },

    { "aggregate": [{ "op": "sum", "field": "yield_num", "as": "yield_sum" }], "groupby": ["state", "crop_clean"] },
    { "calculate": "format(datum.yield_sum, '.2f') + ' t/ha'", "as": "yield_sum_fmt" },

    { "joinaggregate": [{ "op": "count", "field": "crop_clean", "as": "crop_count" }], "groupby": ["state"] },

    { "window": [{ "op": "rank", "as": "rank_in_state" }], "groupby": ["state"], "sort": [{ "field": "yield_sum", "order": "descending" }] },

    {
      "filter": "(ShowWhich == 'All' && datum.rank_in_state <= 5) || (ShowWhich == 'Highest' && datum.rank_in_state == 1) || (ShowWhich == 'Lowest' && datum.rank_in_state == datum.crop_count) || (ShowWhich == 'Median' && datum.rank_in_state == ceil(datum.crop_count/2))"
    }
  ],

  "layer": [
    {
      "mark": { "type": "bar", "cornerRadiusEnd": 2 },
      "encoding": {
        "y": { "field": "state", "type": "nominal", "title": "State", "sort": "-x" },
        "x": { "field": "yield_sum", "type": "quantitative", "title": "Average Yield (t/ha)", "stack": "zero" },
        "color": {
          "field": "crop_clean",
          "type": "nominal",
          "title": "Crop Type",
          "scale": {
            "domain": ["cash crops","coconut","fruits","herbs","industrial crops","paddy","spices","vegetables"],
            "range": ["#2E86AB","#5BC0EB","#55A44E","#CE5A57","#8E7CC3","#7FB069","#D07CA4","#F2C14E"]
          },
          "legend": { "orient": "top" },
          "condition": {
            "test": "ShowWhich == 'All' && datum.rank_in_state > 2",
            "value": "#C7C7C7"
          }
        },
        "order": { "field": "rank_in_state", "type": "quantitative", "sort": "descending" },
        "tooltip": [
          { "field": "state", "title": "State:" },
          { "field": "crop_clean", "title": "Crop:" },
          { "field": "yield_sum_fmt", "type": "nominal", "title": "Average Yield:" }
        ]
      }
    },

    {
      "transform": [
        { "filter": "datum.yield_sum >= 3" }
      ],
      "mark": {
        "type": "text",
        "baseline": "middle",
        "align": "right",
        "dx": -15,
        "fontSize": 11,
        "fontWeight": "bold",
        "fill": "black",
        "clip": true
      },
      "encoding": {
        "y": { "field": "state", "type": "nominal" },
        "x": { "field": "yield_sum", "type": "quantitative", "stack": "zero" },
        "detail": { "field": "crop_clean" },
        "text": { "field": "yield_sum", "type": "quantitative", "format": ".1f" }
      }
    }
  ]
}
