{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "data": {"url": "data/climate_crop.csv"},
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "Total_Rainfall_mm",
      "type": "quantitative",
      "title": "Total Rainfall (mm)"
    },
    "y": {
      "field": "yield",
      "type": "quantitative",
      "title": "Yield (t/ha)"
    },
    "color": {
      "field": "crop_type",
      "type": "nominal",
      "title": "Crop"
    },
    "tooltip": [
      {"field": "state", "title": "State"},
      {"field": "year", "title": "Year"},
      {"field": "crop_type", "title": "Crop"},
      {"field": "yield", "title": "Yield (t/ha)", "format": ".3f"},
      {"field": "Total_Rainfall_mm", "title": "Rainfall (mm)", "format": ".3f"},
      {"field": "Min_Temp", "title": "Min Temp (°C)", "format": ".3f"},
      {"field": "Max_Temp", "title": "Max Temp (°C)", "format": ".3f"},
      {"field": "Rainy_Days", "title": "Rainy Days", "format": ".3f"},
      {"field": "Humidity", "title": "Humidity (%)", "format": ".3f"}
    ]
  },
  "params": [
    {
      "name": "year_selection",
      "bind": {"input": "range", "min": 2019, "max": 2021, "step": 1, "name": "Select year:"},
      "value": 2019
    }
  ],
  "transform": [
    {"filter": "datum.year == year_selection"}
  ]
}
