{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1070,
  "height": 500,
  "projection": { "type": "mercator" },
  "config": { "view": { "stroke": "transparent" } },

  "params": [
    {
      "name": "year_selection",
      "value": 2010,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2021,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/masr0004/FIT-3179/main/Assignment_2/js/malaysia_states.json",
        "format": { "type": "topojson", "feature": "MYSADM0gbOpen" }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgrey",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/masr0004/FIT-3179/main/Assignment_2/js/malaysia_states.json",
        "format": { "type": "topojson", "feature": "MYSADM1gbOpen" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "black",
        "strokeWidth": 0.8
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/masr0004/FIT-3179/main/Assignment_2/data/Mean_temperature_rainfall.csv"
      },
      "transform": [
        { "filter": "toNumber(datum.year) == year_selection" },
        {
          "lookup": "state",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/masr0004/FIT-3179/main/Assignment_2/js/malaysia_states.json",
              "format": { "type": "topojson", "feature": "MYSADM1gbOpen" }
            },
            "key": "properties.shapeName"
          },
          "as": "geo"
        },
        { "calculate": "toNumber(datum.avg_rain_days)", "as": "rain_days_value" },
        { "calculate": "format(datum.rain_days_value, '.1f') + ' days'", "as": "rain_days_fmt" }
      ],
      "mark": { "type": "geoshape", "stroke": "black", "strokeWidth": 0.8 },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "field": "rain_days_value",
          "type": "quantitative",
          "title": "Average Rain Days",
          "scale": { "scheme": "blues" },
          "legend": { "orient": "right", "title": "Avg Rain Days" }
        },
        "tooltip": [
          { "field": "state", "title": "State" },
          { "field": "year", "title": "Year" },
          { "field": "rain_days_fmt", "title": "Average Rain Days" }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/masr0004/FIT-3179/main/Assignment_2/data/Malaysia_Coord_common.csv"
      },
      "transform": [
        {
          "aggregate": [
            { "op": "mean", "field": "Lon", "as": "lon" },
            { "op": "mean", "field": "Lat", "as": "lat" }
          ],
          "groupby": ["States"]
        }
      ],
      "mark": { "type": "text", "fontSize": 12, "fontWeight": "bold", "opacity": 1.0 },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "text": { "field": "States" }
      }
    }
  ]
}
