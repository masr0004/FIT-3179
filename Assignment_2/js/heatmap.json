{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Climate Variables Across Malaysian States (2010–2021)",
    "fontSize": 18,
    "font": "Arial",
    "fontWeight": "bold",
    "anchor": "middle"
  },
  "width": 650,
  "height": 400,
  "data": { "url": "data/Mean_temperature_rainfall.csv", "format": { "type": "csv" } },

  "params": [
    {
      "name": "climate_select",
      "value": "avg_humidity",
      "bind": {
        "input": "select",
        "options": [
          "avg_temp_min",
          "avg_temp_max",
          "avg_humidity"
        ],
        "labels": [
          "Average Min Temperature (°C)",
          "Average Max Temperature (°C)",
          "Average Humidity (%)"
        ],
        "name": "Select Variable: "
      }
    }
  ],

  "transform": [
    { "filter": "toNumber(datum.year) >= 2010 && toNumber(datum.year) <= 2021" },
    { "calculate": "toNumber(datum[climate_select])", "as": "climate_value" },
    { "calculate": "climate_select", "as": "selected_variable" },
    {
      "calculate": "if(climate_select == 'avg_temp_min', 'Average Min Temperature (°C)', if(climate_select == 'avg_temp_max', 'Average Max Temperature (°C)', if(climate_select == 'avg_temp_mean', 'Average Mean Temperature (°C)', if(climate_select == 'avg_rainfall', 'Average Rainfall (mm)', if(climate_select == 'avg_rain_days', 'Average Rain Days', 'Average Humidity (%)')))))",
      "as": "variable_label"
    }
  ],

  "mark": { "type": "rect", "stroke": "black", "strokeWidth": 0.9 },

  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year",
      "axis": { "labelAngle": 45, "labelFontSize": 10, "grid": false }
    },
    "y": {
      "field": "state",
      "type": "nominal",
      "title": "State",
      "axis": { "labelFontSize": 10, "grid": false }
    },
    "color": {
      "field": "climate_value",
      "type": "quantitative",
      "title": "Value",
      "scale": { "scheme": "inferno", "domainMin": 0 }
    },
    "tooltip": [
      { "field": "state", "title": "State" },
      { "field": "year", "title": "Year" },
      { "field": "climate_value", "title": "Value", "format": ".2f" },
      { "field": "variable_label", "title": "Variable" }
    ]
  },

  "config": {
    "background": "#fafafa",
    "font": "Arial",
    "view": { "stroke": "transparent" },
    "axis": { "labelFontSize": 11, "titleFontSize": 13 },
    "legend": { "labelFontSize": 12, "titleFontSize": 13 }
  }
}
