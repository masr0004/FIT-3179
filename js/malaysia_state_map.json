{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1200,
  "height": 400,
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "js/malaysia_states.json",
        "format": {"type": "topojson", "feature": "MYSADM0gbOpen"}
      },
      "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"}
    },
    {
      "data": {
        "url": "js/malaysia_states.json",
        "format": {"type": "topojson", "feature": "MYSADM1gbOpen"}
      },
      "transform": [
        {
          "lookup": "properties.shapeName",   
          "from": {
            "data": {"url": "data/crops_state.csv"},
            "key": "state",
            "fields": ["date", "crop_type", "production", "planted_area", "yield"]
          }
        },
        { "filter": "toNumber(datum.date) == year_selection" },
        { "filter": {"param": "crop_selection"} }
      ],
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "yield",
          "type": "quantitative",
          "title": "Yield (t/ha)",
          "scale": {"scheme": "greens"}
        },
        "tooltip": [
          {"field": "properties.shapeName", "title": "State"},
          {"field": "crop_type", "title": "Crop"},
          {"field": "date", "title": "Year"},
          {"field": "production", "title": "Production (t)", "format": ",.0f"},
          {"field": "planted_area", "title": "Planted Area (ha)", "format": ",.1f"},
          {"field": "yield", "title": "Yield (t/ha)", "format": ".3f"}
        ]
      }
    }
  ],
  "params": [
    {
      "name": "crop_selection",
      "bind": {
        "input": "select",
        "options": ["paddy", "coconut", "fruits", "flowers"],
        "labels": ["Paddy", "Coconut", "Fruits", "Flowers"],
        "name": "Select crop: "
      },
      "value": "paddy"
    },
    {
      "name": "year_selection",
      "bind": {"input": "range", "min": 2019, "max": 2021, "step": 1, "name": "Select year:"},
      "value": 2019
    }
  ]
}
