{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1250,
  "height": 700,
  "projection": {
    "type": "mercator"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/masr0004/FIT-3179/main/34092544_HW9/js/malaysia_states.json",
        "format": {"type": "topojson", "feature": "MYSADM0gbOpen"}
      },
      "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/masr0004/FIT-3179/main/34092544_HW9/js/malaysia_states.json",
        "format": {"type": "topojson", "feature": "MYSADM1gbOpen"}
      },
      "transform": [
        {
          "lookup": "properties.shapeName",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/masr0004/FIT-3179/main/34092544_HW9/data/crops_state_paddy_2022.csv"
            },
            "key": "state",
            "fields": ["production", "planted_area", "yield"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "yield",
          "type": "quantitative",
          "title": "Paddy yield per hectare (t/ha)",
          "scale": {"scheme": "greens"}
        },
        "tooltip": [
          {"field": "properties.shapeName", "title": "State"},
          {
            "field": "production",
            "type": "quantitative",
            "title": "Total paddy production (tonnes)",
            "format": ",.0f"
          },
          {
            "field": "planted_area",
            "type": "quantitative",
            "title": "Total planted area (hectares)",
            "format": ",.1f"
          },
          {
            "field": "yield",
            "type": "quantitative",
            "title": "Average yield (tonnes per hectare)",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/masr0004/FIT-3179/main/34092544_HW9/data/Malaysia_Coord_common.csv"
      },
      "transform": [
        {
          "aggregate": [
            {"op": "mean", "field": "Lon", "as": "lon"},
            {"op": "mean", "field": "Lat", "as": "lat"}
          ],
          "groupby": ["States"]
        }
      ],
      "mark": {"type": "text", "fontSize": 10, "fontWeight": "bold"},
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "States"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/masr0004/FIT-3179/main/34092544_HW9/js/malaysia_states.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray", "strokeWidth": 0.5}
    }
  ]
}
